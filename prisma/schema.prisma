generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id    Int      @id @default(autoincrement())
  title String
  start DateTime @default(now())
  end   DateTime @default(now())

  trainer   Trainer?  @relation(fields: [trainerId], references: [id], onDelete: SetNull)
  trainerId Int?
  afwezigen Student[]

  @@map("event")
}

model Competition {
  id    Int      @id @default(autoincrement())
  type  String
  title String
  date  DateTime @default(now())

  referee   Trainer? @relation(fields: [refereeId], references: [id], onDelete: SetNull, name: "referee")
  refereeId Int?
  coach     Trainer? @relation(fields: [coachId], references: [id], onDelete: SetNull, name: "coach")
  coachId   Int?

  @@map("competition")
}

model Trainer {
  id       Int     @id @default(autoincrement())
  name     String
  degree   Degree? @relation(fields: [degreeId], references: [id], onDelete: SetNull)
  degreeId Int?

  events     Event[]
  refereeing Competition[] @relation("referee")
  coaching   Competition[] @relation("coach")

  @@map("trainer")
}

model Degree {
  id      Int       @id @default(autoincrement())
  name    String
  payment Decimal   @default(0) @db.Decimal(10, 2)
  Trainer Trainer[]

  @@map("degree")
}

model Student {
  id           Int     @id @default(autoincrement())
  name         String
  afwezigheden Event[]

  @@map("student")
}
