generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int      @id @default(autoincrement())
  title     String
  start     DateTime @default(now())
  end       DateTime @default(now())
  trainer   Trainer? @relation(fields: [trainerId], references: [id], onDelete: SetNull)
  trainerId Int?

  @@map("event")
}

model Trainer {
  id    Int     @id @default(autoincrement())
  name  String
  Event Event[]

  @@map("trainer")
}
