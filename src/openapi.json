{
  "openapi": "3.0.3",
  "info": {
    "title": "Wiki Klauwaerts",
    "description": "Deze API is bestemd voor de wiki van Schermgilde de Klauwaerts",
    "version": "1.0",
    "contact": {
      "name": "Schermgilde de Klauwaerts",
      "url": "https://www.klauwaerts.be/"
    }
  },
  "servers": [{ "url": "http://localhost:8000/api" }],
  "tags": [
    {
      "name": "Events"
    }
  ],
  "paths": {
    "/events/{id}": {
      "get": {
        "tags": ["Events"],
        "description": "Haal een aankoper op",
        "operationId": "getAankoperById",
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "200": {
            "description": "Aankoper gevonden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Aankoper"
                }
              }
            }
          },
          "400": {
            "description": "Ongeldige aankoperId"
          },
          "404": {
            "description": "Aankoper niet gevonden"
          }
        }
      }
    }
  }
}
